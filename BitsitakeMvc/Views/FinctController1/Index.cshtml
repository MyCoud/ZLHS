
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />





    <title>Index</title>
</head>
<body>
    <div>
        <input id="btnName" type="text" name="Name" />
        <input id="btnAge" type="text" name="Age" />
        <input id="btnAdd" type="submit" value="submit" />
    </div>
</body>
</html>

@section Scripts {
    <script>
        $('#btnAdd').click(function () {
            var data = {
                Name: $('#btnName').val(),
                Age: $('#Age').val(),
            }
            $.ajax({
                url: 'http://localhost:52142/api/Defunct/MeName',
                type: 'post',
                data: data,
                contentType: "application/json",
                success: function (d) {
                    if (d > 0) {
                        alert('成功');
                    }
                    else {
                        alert('失败');
                    }
                }
            })
        })
    </script>
}
