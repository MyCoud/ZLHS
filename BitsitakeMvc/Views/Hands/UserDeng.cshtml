                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/layui-v2.5.7/layui/layui.js"></script>
    <script>
        layui.use('form', function () {
            var form = layui.form;
            form.on('submit(DengRu)', function (data) {
                console.log(data.field) //当前容器的全部表单字段，名值对形式：{name: value}
                var q = "http://localhost:52142/api/Defunct/GetReuslt?LoginPhone="+data.field.LoginName+"&LoginPass="+data.field.LoginPass;
                $.ajax({
                    url: q,
                    type: 'post',
                    contentType: "application/json",//跨域
                    success: function (d) {
                        if (d > 0) {
                            alert('登录成功');
                            location.href = '/Hands/Indexs';

                        }
                        else if (d == -1) {
                            alert("登录失败");
                        }
                        else if (d == -3) {
                            alert('验证码错误');
                            $('#valiCode').click();
                            $('#LoginCode').val("").focus();
                        }
                    }
                })
                return false; //阻止表单跳转。如果需要表单跳转，去掉这段即可。
            });
        });



        //手机发送验证码

    </script>

   
