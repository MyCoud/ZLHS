                                    @*<img src="/Hands/GetValidateImage" id="valiCode" placeholder="请输入验证码" alt="Alternate Text" />*@
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <button lay-submit lay-filter="DengRu">登入</button>
                                </td>
                            </tr>


                        </form>
                        <div style="width:300px;height:400px;float:left;margin-left:390px;margin-top:-320px;background-color:white;border-left: 1px dashed #C1C1C1">
